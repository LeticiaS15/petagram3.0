<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="#117A75"

>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_topACT"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImgFotoM"
            android:layout_width="387dp"
            android:layout_height="281dp"
            android:src="@drawable/gato" />

        <TextView
            android:id="@+id/TexTNombreM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pnombre"
            android:textSize="@dimen/pnombre"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/BtnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hueso" />

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:text="@string/plikes"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

</LinearLayout>